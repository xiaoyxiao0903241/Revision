commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo ""
    echo "ğŸ“ Commit message should follow the format:"
    echo "   <type>(<scope>): <description>"
    echo ""
    echo "ğŸ·ï¸  Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
    echo "ğŸ“‹ Examples:"
    echo "   feat(auth): add user login functionality"
    echo "   fix(ui): resolve button alignment issue"
    echo "   docs: update README with installation guide"
    echo ""
    exit 1
fi

echo "âœ… Commit message format is valid!"
